{% schema %}
{
  "name": "Aleem Products Grid",
  "settings": [
    {
    "type": "product",
    "id" : "product_1",
    "label" : "Product 1"
    },{
    "type": "product",
    "id" : "product_2",
    "label" : "Product 2"
    },{
    "type": "product",
    "id" : "product_3",
    "label" : "Product 3"
    },{
    "type": "product",
    "id" : "product_4",
    "label" : "Product 4"
    },{
    "type": "product",
    "id" : "product_5",
    "label" : "Product 5"
    },{
    "type": "product",
    "id" : "product_6",
    "label" : "Product 6"
    },
  ],
  "presets": [
    {
    "name" : "Aleem Products Grid",
    "category" : "Custom Products Grid"
    }
  ]
}
{% endschema %}

<section class="section2 mt-5">
  <div class="container">
    <div class="row text-center text-md-start">
      <div class="col-12">
        <h2>Tisso vison in the wild</h2>
      </div>
    </div>

    <div class="row">
      {% for i in (1..6) %}
        {% assign product_id = 'product_' | append: i %}
        {% assign product = section.settings[product_id] %}
        {% if product %}
          {% assign product = all_products[product] %}
          <div class="col-6 col-md-4 p-2">
            <div class="product-item pos-rel" data-product="{{ product.handle }}">
              <a href="#" class="product-grid__link">
                <img
                  src="{{  product.featured_image | remove_first: 'files/' | file_img_url:'large' }}"
                  alt="{{ product.title }}"
                  width="100%"
                  height="100%"
                >
              </a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% comment %}
  START OF POP-UP DESIGN
{% endcomment %}

<div id="product-popup" style="display:none">
  <div class="popup-content">
    <span class="close-popup">&times;</span>
    <h2 id="product-title"></h2>
  </div>
</div>

<style>
  #product-popup{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background: #F5F5F5;
  }
  #popup-content{
    background:#FFF;
    max-width:400px;
    position: relative;
  }
  .close-popup {
    position: absolute;
    top:10px;
    right:10px;
    cursor:pointer;
  }
</style>

{% comment %}
  START OF SCRIPT
{% endcomment %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var product_links = document.querySelectorAll('.product-grid__link');
    var popup = document.getElementById('product-popup');
    var close_popup = document.querySelection('.close-popup');

    product_links.forEach(function(link){
      link.addEventListener('click', function(e){
        e.preventDefault();
        var product_handle = this.closest('.product_grid__item').dataset.productHandle;
        fetch('/products/' + product_handle + '.js')
        .then(product => response.json())
        .then(product => {
          document.getElementById('product-title').innerText = product.title;
        });
      });
    });

    close_popup.addEventListner('click', function(){
      popup.style.display = 'none';
    });
  });
</script>
